<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.Nodes"
    tools:showIn="@layout/activity_nds">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nds_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/iner_kit_menu_padding"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.vanir.sensorhacks.ui.Nodes"
        tools:showIn="@layout/activity_nds">

        <ImageButton
            android:id="@+id/ndsButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:src="@drawable/round_device_hub_black_18dp"
            android:layout_marginEnd="@dimen/right_margin_text_after_pic" />

        <TextView
            android:id="@+id/ndstextView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:text="Node A"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/imagebutton_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ndseditText1"
            android:hint="@string/edit_text_location"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:imeOptions="actionDone" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nds_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/iner_kit_menu_padding"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.vanir.sensorhacks.ui.Nodes"
        tools:showIn="@layout/activity_nds">

        <ImageButton
            android:id="@+id/ndsButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:src="@drawable/round_device_hub_black_18dp"
            android:layout_marginEnd="@dimen/right_margin_text_after_pic" />

        <TextView
            android:id="@+id/ndstextView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:text="Node B"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/imagebutton_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ndseditText2"
            android:hint="@string/edit_text_location"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:imeOptions="actionDone" />

    </LinearLayout>

</LinearLayout>