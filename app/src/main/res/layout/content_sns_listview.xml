<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.Sensors"
    tools:showIn="@layout/activity_sns">


    <TextView
        android:id="@+id/sns_listview_name"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/listview_name_textsize"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true" />

    <TextView
        android:id="@+id/sns_listview_type"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true" />

    <TextView
        android:id="@+id/sns_listview_status"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true" />

    <TextView
        android:id="@+id/sns_listview_value"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true" />

</LinearLayout>